{% extends 'home.html.twig' %}

{% block bodymain %}

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Tendera</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Titull Thirrje</th>
                    <th>Biznesi</th>
                    <th>Fond Limit</th>
                    <th>Mbyllje Ofertimi</th>
                    <th>Fusha e Operimit</th>
                    <th> Detaje</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for tender in tenderat %}
                <tr>
                    <td>{{ tender.id }}</td>
                    <td>{{ tender.titull_thirrje }}</td>
                    <td><a>{{ tender.emer_biznesi}} </a></td>
                    <td>{{ tender.fond_limit }}</td>
                    <td>{{ tender.data_perfundimit|date('d-m-Y')  }}</td>
                    <td>{{ tender.emer_fushe_operimi }}</td>
                    <td>
                        <a href="{{ path('tender_shiko',{'id':tender.id}) }}" ><span class="icon "><i class="fa fa-info-circle">Detaje</i></span></a>
                    <a href="{{ path('oferto',{'id':tender.id }) }}">
                        <span class="icon "><i class="lnr lnr-select">Apliko</i></span></a>
                    </td>
                </tr>
               {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

